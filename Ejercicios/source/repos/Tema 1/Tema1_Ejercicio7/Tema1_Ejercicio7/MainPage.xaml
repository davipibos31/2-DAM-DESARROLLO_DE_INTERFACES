<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tema1_Ejercicio7.MainPage">

    <StackLayout x:Name="lMiStackLayout">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Ejercicio 7" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="E1" Keyboard="Numeric" Placeholder="Escribe un número"></Entry>
        <Entry x:Name="E2" Keyboard="Text" Placeholder="Escribe un texto"></Entry>
        <Button x:Name="B1" Text="Clickame" Clicked="B1_Clicked"></Button>
    </StackLayout>

</ContentPage>
